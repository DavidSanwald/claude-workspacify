{
  "name": "claude-workspacify",
  "publisher": "likesfoxes",
  "displayName": "claude-workspacify",
  "description": "flattens folders and fils for a claude workspace wh",
  "license": "MIT",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claude-workspacify.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "claude-workspacify.flattenFolder",
        "title": "Flatten to Claude Workspace"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "claude-workspacify.flattenFolder",
          "when": "explorerResourceIsFolder",
          "group": "claude-workspacify"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "deploy": "vsce publish"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/error": "^3.0.0",
    "@semantic-release/git": "^10.0.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "@vscode/vsce": "^3.2.2",
    "aggregate-error": "^3.1.0",
    "clean-stack": "^2.2.0",
    "esbuild": "^0.24.2",
    "eslint": "^9.19.0",
    "execa": "^5.1.1",
    "human-signals": "^2.1.0",
    "indent-string": "^4.0.0",
    "is-stream": "^2.0.1",
    "npm-run-all": "^4.1.5",
    "npm-run-path": "^4.0.1",
    "p-reduce": "^2.1.0",
    "semantic-release-stop-before-publish": "^1.0.0",
    "semantic-release-vsce": "^6.0.6",
    "signal-exit": "^3.0.7",
    "strip-final-newline": "^2.0.0",
    "typescript": "^5.7.3"
  }
}
